@model UsuarioLogin

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Restaurante NDK</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/login-style.css" rel="stylesheet">
</head>

<body>  

    <div class="page-content">
        <div class="page-wrapper">

            <div class="container">
                <div class="row content-row">
                    <div class="col-sm-4">
                        <h4>Restaurante NDK</h4>

                        @if (!string.IsNullOrEmpty(ViewBag.LoginErro))
                        {
                            <span class="text-danger">@ViewBag.LoginErro</span>
                        }

                        <form method="post" class="form-border">
                            <div class="form-group">
                                <label for="labelLogin">Login</label>
                                @Html.TextBoxFor(m => m.Login, new { @type = "text", @name = "Login", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="labelSenha">Senha</label>
                                @Html.TextBoxFor(m => m.Senha, new { @type = "password", @name = "Senha", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                            </div>

                            <br>
                            <div class="form-footer">
                                <a href="#" style="font-weight: bold; text-decoration: none; color: black;">Esqueci minha senha</a>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-footer">
        <div class="foter-content">
            <div class="footer-text">e2Doc Enterprise - © 2020</div>
        </div>
    </div>

</body>
<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
@Scripts.Render("~/bundles/jqueryval")

</html>